{% extends 'base.html.twig' %}
{% block body %}
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark" xmlns="http://www.w3.org/1999/html">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="navbar-brand collapse navbar-collapse" id="navbarSupportedContent">
            {% include "navbar/dropdown.html.twig" %}
        </div>
    </nav>
    <section class="jumbotron text-center">
        <div class="container">
            <h1 class="jumbotron-heading">PayPal Products</h1>
            <p class="lead text-muted">Only showing a part of them...</p>
        </div>
    </section>
    <div class="container">
        <div class="row">
            <div class="col">
                <section class="jumbotron h-100 bg-paypal">
                    <div class="container">
