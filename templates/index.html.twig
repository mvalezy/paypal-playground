                            <a class="bullet nav-link text-light" href="{{ path('payments') }}">Send Payments</a>
                            <a class="bullet nav-link text-light" href="{{ path('payouts') }}">Receive Payments</a>
                            <a class="bullet nav-link text-light" href="{{ path('invoices') }}">Invoices QR</a>
