{% extends 'anonymous/base.html.twig' %}
{% block content %}
    <div class="jumbotron">
        <h1>Instructions</h1>
        <ul class="list">
            <li>We have some information from you!</li>
        </ul>
        <h6>Progress</h6>
        <div class="progress">
            <div class="progress-bar" role="progressbar" style="width: 75%;" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100">75%</div>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row">
            <div class="col text-center">
                <p><strong>PayPal's AccessToken worked! now we have information finally</strong></p>
            </div>
        </div>
        <div class="row">
            <div class="col text-center">
                <div class="alert alert-info" role="alert">
                    <p>Name</p>
                    <p>{{ name }}</p>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col">
                {{ dump(userInfo) }}
            </div>
        </div>
        <div class="row">
            <div class="col text-center">
                <form action="{{ path('account') }}" method="post">
                    <input type="hidden" id="refresh_token" name="refresh_token" value="{{ refresh_token }}">
                    <button type="submit" class="btn btn-primary btn-lg btn-block">Go to MyAccount</button>
                </form>
            </div>
        </div>
    </div>
{% endblock %}