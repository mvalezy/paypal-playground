{% extends 'paypal/base.html.twig' %}
{% block title %}PayPal PlayGround{% endblock %}
{% block body %}
<nav class="navbar navbar-expand-lg navbar-light bg-paypal paypal-font">
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="navbar-brand collapse navbar-collapse" id="navbarSupportedContent">
        {% include "navbar/dropdown.html.twig" %}
        <div class="navbar-nav col justify-content-center">
            <a class="nav-link text-light" href="{{ path('paypal-authenticated-index') }}">My Account</a>
            <a class="nav-link text-light" href="{{ path('paypal-authenticated-payments') }}">Send Payments</a>
            <a class="nav-link text-light" href="{{ path('paypal-authenticated-payouts') }}">Receive Payments</a>
            <a class="nav-link text-light" href="{{ path('paypal-authenticated-invoices') }}">Invoices QR</a>
            <a class="nav-link text-light" href="{{ path('paypal-authenticated-subscriptions') }}">Subscriptions</a>
        </div>
    </div>
</nav>
<div class="navbar">
    <div class="col-3 text-left">
        <p class="text-center"><strong>Welcome: </strong>{{ app.session.get('email') }}</p>
    </div>
    <div class="col-6"></div>
    <div class="col-3 text-right">
        <button type="button" class="btn btn-success" onclick="window.location.reload();">Refresh</button>
        <button type="button" class="btn btn-secondary" onclick="location.href = '{{ path('paypal-session-logout') }}';">Log Out</button>
        {% include "paypal/modals/sandbox-credentials.html.twig" %}
    </div>
    <ul class="navbar-nav col-2 justify-content-end">
    </ul>
</div>
<div class="container mt-4">
    {% block content %}{% endblock %}
</div>
{% endblock %}