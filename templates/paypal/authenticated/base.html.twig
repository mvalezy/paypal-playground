{% extends 'paypal/base.html.twig' %}
{% block body %}
<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <a class="navbar-brand" href="#">PayPal PlayGround</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <div class="navbar-nav justify-content-center col-10">
                <a class="nav-link active" href="{{ path('account') }}">My Account</a>
                <a class="nav-link active" href="{{ path('payments') }}">Send Payments</a>
                <a class="nav-link active" href="{{ path('payouts') }}">Receive Payments</a>
                <a class="nav-link active" href="{{ path('invoices') }}">Invoices QR</a>
            </div>
            <ul class="navbar-nav col justify-content-end">
                {% include "paypal/modals/sandbox-credentials.html.twig" %}
            </ul>
    </div>
</nav>
<div class="navbar">
    <div class="col text-center">
        <p class="text-center"><strong>Welcome: </strong>{{ app.session.get('email') }}</p>
    </div>
    <div class="col text-center">
        <button type="button" class="btn btn-success" onclick="window.location.reload();">Refresh</button>
        <button type="button" class="btn btn-secondary" onclick="location.href = '{{ path('logout') }}';">Log Out</button>
    </div>
</div>
<div class="container mt-4">
    {% block content %}{% endblock %}
</div>
{% endblock %}