{% extends 'base.html.twig' %}
{% block title %}PayPal PlayGround{% endblock %}
{% block navbar %}
    {% embed "navbar/navbar.html.twig" %}
        {% block nav_class %}navbar-light bg-paypal paypal-font{% endblock nav_class %}
        {% block nav_items %}
            <div class="navbar-nav col justify-content-center">
                <a class="nav-link text-light" href="{{ path('paypal-connect-index') }}">Connect</a>
                <a class="nav-link text-light" href="{{ path('paypal-payments-pay-ins') }}">PayIns</a>
                <a class="nav-link text-light" href="{{ path('paypal-payments-pay-outs') }}">PayOuts</a>
                <a class="nav-link text-light" href="{{ path('paypal-payments-invoices') }}">Invoices</a>
                <a class="nav-link text-light" href="{{ path('paypal-payments-subscriptions') }}">Subscriptions</a>
                <a class="nav-link text-light" href="#">QR Codes</a>
                <a class="nav-link text-light" href="#">BOPIS</a>
                <a class="nav-link text-light" href="#">PayLater</a>
            </div>
        {% endblock nav_items %}
    {% endembed %}
    <div class="navbar">
            <button type="button" class="btn btn-success" onclick="window.location.reload();">Refresh</button>
            <button type="button" class="btn btn-secondary" onclick="location.href = '{{ path('paypal-session-logout') }}';">Log Out</button>
            {% include "paypal/modals/sandbox-credentials.html.twig" %}
    </div>
{% endblock navbar %}
{% block body %}
    <div class="container mt-4">
        {% block content %}{% endblock content %}
    </div>
{% endblock body %}
