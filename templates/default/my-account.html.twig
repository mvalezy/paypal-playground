{% extends 'base.html.twig' %}
{% block title %}PayPal PlayGround{% endblock %}
{% block body %}
    <div class="jumbotron">
        <h1>Your Account</h1>
        <ul class="list">
            <li>We have you logged in. Welcome!</li>
        </ul>
        <h6>Progress</h6>
        <div class="progress">
            <div class="progress-bar" role="progressbar" style="width: 100%;" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100">100%</div>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row">
            <div class="col text-center">
                <p><strong>Welcome back:</strong></p>
            </div>
        </div>
        <div class="row">
            <div class="col text-center">
                <div class="alert alert-info" role="alert">
                    <p>Name: {{ name }}</p>
                    <p>Email: {{ email }}</p>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <h6> Menu options:</h6>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <button type="button" class="btn btn-success" onclick="window.location.reload();">Refresh</button>
                <button type="button" class="btn btn-info" onclick="location.href = '{{ path('logout') }}';">Log Out</button>
            </div>
        </div>
    </div>
{% endblock %}