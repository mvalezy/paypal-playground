{% extends 'base.html.twig' %}
{% block body %}
<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <div class="container">
        <div class="col text-left">
            <a class="navbar-brand" href="/">PayPal PlayGround</a>
        </div>
        <div class="col-5 text-center">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link active" href="{{ path('account') }}">My Account</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link active" href="{{ path('payments') }}">Send Payments</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link active" href="{{ path('payouts') }}">Receive Payments</a>
                </li>
            </ul>
        </div>
        <div class="col text-right">
            {% include "modals/sandbox-credentials.html.twig" %}
        </div>
    </div>
</nav>
<div class="navbar">
    <div class="col text-center">
        <p class="text-center"><strong>Welcome: </strong>{{ app.session.get('email') }}</p>
    </div>
    <div class="col text-center">
        <button type="button" class="btn btn-success" onclick="window.location.reload();">Refresh</button>
        <button type="button" class="btn btn-secondary" onclick="location.href = '{{ path('logout') }}';">Log Out</button>
    </div>
</div>
<div class="container mt-4">
    {% block content %}{% endblock %}
</div>
{% endblock %}