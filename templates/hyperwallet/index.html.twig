{% extends 'hyperwallet/base.html.twig' %}
{% block content %}
    <div class="hyperwallet-font">
        <section class="jumbotron hyperwallet-font-header">
            <div class="container container-fluid">
                <div class="row justify-content-center">
                    <button class="btn d-inline align-middle">
                        <img class="logo-hyperwallet" src="https://static.eluta.ca/ia/h9/employer_logo_regular_universal_en_97c63eb12ab95ef0b9de832187361a42.svg" />
                    </button>
                    <div class="jumbotron-heading d-inline align-middle">
                        <h1 class="ml-3 align-middle">Let's Play</h1>
                    </div>
                </div>
            </div>
        </section>
        <div class="row">
            <div class="col">
                <ul class="list">
                    <li>API Enpoints testing</li>
                    <li>Checkout the multiple integrations methods</li>
                    <li>Understand the basics of HW payouts</li>
                </ul>
            </div>
        </div>
        <div class="row mt-2">
            <div class="col-3">
                <a class="btn btn-block btn-outline-light bg-hyperwallet" href="{{ path('hyperwallet-users-index') }}">Users API</a>
            </div>
            <div class="col justify-content-start">
                <h6 class="ml-5 d-inline">Users is a critical resource for HW. Play with them to see how they work.</h6>
            </div>
        </div>
        <div class="row mt-2">
            <div class="col-3">
                <a class="btn btn-block btn-outline-light bg-hyperwallet" href="{{ path('hyperwallet-payments-index') }}">Payments API</a>
            </div>
            <div class="col justify-content-start">
                <h6 class="ml-5 d-inline">Check and make payments to your payees.</h6>
            </div>
        </div>
        <div class="row mt-2">
            <div class="col-3">
                <a class="btn btn-block btn-outline-light bg-hyperwallet" href="{{ path('hyperwallet-transfers-index') }}">Transfers API</a>
            </div>
            <div class="col justify-content-start">
                <h6 class="ml-5 d-inline">See the transfers that users have initiated.</h6>
            </div>
        </div>
    </div>
{% endblock %}
