{% extends 'hyperwallet/base.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('hyperwallet-user-verify') }}
{% endblock %}
{% block  content %}
    <div class="js-user-auth-token-url" data-user-auth-token-url="{{ path("hyperwallet-users-auth-token", {'userToken': 'user_token_replace'}) }}"></div>
    <div class="js-user-token" data-user-token="{{ userJson.token }}"></div>
    <div class="js-user-language" data-user-language="{{ userJson.language }}"></div>
    <div class="hyperwallet-font">
        <div class="row hyperwallet-font-header ">
            <h3>User Verify Drop-In</h3>
        </div>
        <div class="row">
            <p>Verify a customer when HW requires it</p>
        </div>
    </div>
    <div class="row paypal-font">
        <div class="col-2"></div>
        <div class="col-8">
            <div class="p-3 border" style="background: #dedede; border-radius: 20px" id="VerificationUI"></div>
        </div>
        <div class="col-2"></div>
    </div>
{% endblock content %}
{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('hyperwallet-user-verify') }}
{% endblock javascripts %}
