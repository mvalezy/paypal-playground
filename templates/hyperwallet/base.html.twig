{% extends 'base.html.twig' %}
{% block title %}HyperWallet PlayGround{% endblock %}
{% block navbar %}
    {% embed "navbar/navbar.html.twig" %}
        {% block nav_class %}navbar-light bg-hyperwallet{% endblock nav_class %}
        {% block nav_items %}
            <div class="navbar-nav col justify-content-center">
                <a class="nav-link text-light" href="{{ path('hyperwallet-users-index') }}">Users</a>
                <a class="nav-link text-light" href="{{ path('hyperwallet-payments-index') }}">Payments</a>
                <a class="nav-link text-light" href="{{ path('hyperwallet-transfers-index') }}">Transfers</a>
            </div>
            <span class="m-3 badge badge-pill badge-success">{{ random([
                    'Yeah!', 'C\'mon!', 'Booom!', 'Awesome!', 'Massive!','Bombastic!','Payouts Rocks',
                    'PayPal Powah!', 'HyperWallet you say?', 'What about some PayPal Magic?', 'The limit is the Sky'
                ]) }}</span>
        {% endblock nav_items %}
    {% endembed %}
{% endblock navbar %}
{% block body %}
<div class="container mt-4">
    {% block content %}{% endblock content %}
</div>
{% endblock body %}
