<div class="list-group" id="list-tab" role="tablist">
    <a class="list-group-item list-group-item-action disabled" data-toggle="list" role="tab">
        <div class="row">
            <div class="col text-left">
                <span class="font-weight-bold">Name</span>
            </div>
            <div class="col text-center">
                <span class="font-weight-bold">Email</span>
            </div>
            <div class="col text-right">
                <span class="font-weight-bold">Vaulted PM</span>
            </div>
        </div>
    </a>
    {% for customer in customers %}
        <a class="list-group-item list-group-item-action {% if loop.first %}active{% endif %}" id="{{ customer.id }}" data-toggle="list" href="#{{ customer.id }}" role="tab" aria-controls="{{ customer.id }}">
            <div class="row">
                <div class="col text-left">
                    <span>{{ customer.full_name }}</span>
                </div>
                <div class="col text-center">
                    <span>{{ customer.email }}</span>
                </div>
                <div class="col text-right">
                    <span>{{ customer.available_payment_methods }}</span>
                </div>
            </div>
        </a>
    {% endfor %}
</div>