{% extends 'base.html.twig' %}
{% block body %}
    <div class="js-settings-url" data-settings-url="{{ path('settings-save') }}"></div>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark" xmlns="http://www.w3.org/1999/html">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="navbar-brand collapse navbar-collapse" id="navbarSupportedContent">
            {% include "navbar/dropdown.html.twig" %}
        </div>
    </nav>
    <form id="settings-data">
        <section class="text-center container-fluid p-3">
            <button class="btn-success btn btn-lg" id="submit-button">Save Settings</button>
        </section>
        <div class="container">
            <div class="row">
                <div class="col">
                    <section class="jumbotron h-100 bg-gray">
                        <div class="container text-center">
                            <h3>Customer Settings</h3>
                            <hr>
                        </div>
                        <div class="col">
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <label class="input-group-text" for="inputGroupSelect01">Currency</label>
                                </div>
                                <select class="custom-select" name="settings-customer-currency">
                                    <option value="EUR" selected>EUR</option>
                                    <option value="USD">USD</option>
                                    <option value="GBP">GBP</option>
                                    <option value="SEK">SEK</option>
                                </select>
                            </div>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">UserId</span>
                                </div>
                                <input type="text" aria-label="UserId" class="form-control text-right" name="settings-customer-id" value="CS12.000.AAE">
                            </div>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">Name</span>
                                </div>
                                <input type="text" aria-label="Name" class="form-control text-right" name="settings-customer-name" value="John">
                            </div>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">Family Name</span>
                                </div>
                                <input type="text" aria-label="Family Name" class="form-control text-right" name="settings-customer-family-name" value="Doe">
                            </div>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">Email</span>
                                </div>
                                <input type="email" aria-label="Email" class="form-control text-right" name="settings-customer-email" value="john.doe@paypal.com">
                            </div>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">Street</span>
                                </div>
                                <input type="text" aria-label="Street" class="form-control text-right" name="settings-customer-street" value="Rue Bethancourt 5">
                            </div>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">City</span>
                                </div>
                                <input type="text" aria-label="City" class="form-control text-right" name="settings-customer-city" value="Paris">
                            </div>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">Province</span>
                                </div>
                                <input type="text" aria-label="Province" class="form-control text-right" name="settings-customer-province" value="Paris">
                            </div>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">ZipCode</span>
                                </div>
                                <input type="text" aria-label="ZipCode" class="form-control text-right" name="settings-customer-zip-code" value="75007">
                            </div>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <label class="input-group-text" for="inputGroupSelect01">Country</label>
                                </div>
                                <select class="custom-select" name="settings-customer-country">
                                    <option value="FR" selected>FR</option>
                                    <option value="ES">ES</option>
                                    <option value="DE">DE</option>
                                    <option value="NL">NL</option>
                                    <option value="IT">IT</option>
                                    <option value="UK">UK</option>
                                    <option value="US">US</option>
                                </select>
                            </div>
                        </div>
                    </section>
                </div>
                <div class="col">
                    <section class="jumbotron h-100 bg-gray">
                        <div class="container text-center">
                            <h3>Merchant Settings</h3>
                            <hr>
                        </div>
                        <div class="col">
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">Business Name</span>
                                </div>
                                <input type="text" aria-label="Business Name" class="form-control text-right" name="settings-merchant-name" value="PlayGround Shop">
                            </div>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">Email</span>
                                </div>
                                <input type="email" aria-label="Email" class="form-control text-right" name="settings-merchant-email" value="merchant@domain.com">
                            </div>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">Street</span>
                                </div>
                                <input type="text" aria-label="Street" class="form-control text-right" name="settings-merchant-street" value="Calle Valencia 34">
                            </div>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">City</span>
                                </div>
                                <input type="text" aria-label="City" class="form-control text-right" name="settings-merchant-city" value="Mahora">
                            </div>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">Province</span>
                                </div>
                                <input type="text" aria-label="Province" class="form-control text-right" name="settings-merchant-province" value="Albacete">
                            </div>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">ZipCode</span>
                                </div>
                                <input type="text" aria-label="ZipCode" class="form-control text-right" name="settings-merchant-zip-code" value="02002">
                            </div>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <label class="input-group-text" for="inputGroupSelect01">Country</label>
                                </div>
                                <select class="custom-select" name="settings-merchant-country">
                                    <option value="FR" selected>ES</option>
                                    <option value="ES">FR</option>
                                    <option value="DE">DE</option>
                                    <option value="NL">NL</option>
                                    <option value="IT">IT</option>
                                    <option value="UK">UK</option>
                                    <option value="US">US</option>
                                </select>
                            </div>
                        </div>
                        <div class="container text-center">
                            <h3>Default Items</h3>
                            <hr>
                        </div>
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text">Name</span>
                            </div>
                            <input type="text" aria-label="Name" class="form-control text-right" name="settings-item-name" value="Make me proud! TEE (XXL)">
                        </div>
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text">Price</span>
                            </div>
                            <input type="number" aria-label="Price" class="form-control text-right" name="settings-item-price" value="18">
                            <div class="input-group-append">
                                <span class="input-group-text">.00 €</span>
                            </div>
                        </div>
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text">Shipping</span>
                            </div>
                            <input type="number" aria-label="Price" class="form-control text-right" name="settings-item-shipping" value="5">
                            <div class="input-group-append">
                                <span class="input-group-text">.00 €</span>
                            </div>
                        </div>
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text">SKU</span>
                            </div>
                            <input type="text" aria-label="SKU" class="form-control text-right" name="settings-item-sku" value="TEE-MMP-XXL">
                        </div>
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text">Description</span>
                            </div>
                            <input type="text" aria-label="Description" class="form-control text-right" name="settings-item-description"
                                   value="A tee that will make you proud and good looking, in an XXL size">
                        </div>
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text">Purchase</span>
                            </div>
                            <input type="text" aria-label="Purchase" class="form-control text-right" name="settings-item-purchase-description"
                                   value="Tee sale: Make me proud! (XXL) SPECIAL OFFER">
                        </div>
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text">Tax Name</span>
                            </div>
                            <input type="text" aria-label="note" class="form-control text-right" name="settings-item-tax-name" value="VAT">
                        </div>
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text">Tax %</span>
                            </div>
                            <input type="text" aria-label="note" class="form-control text-right" name="settings-item-tax-value" value="21">
                        </div>
                    </section>
                </div>
            </div>
        </div>
    </form>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('settings') }}
{% endblock %}
